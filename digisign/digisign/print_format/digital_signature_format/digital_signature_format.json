 "html": "<div class=\"print-document\">\r\n    <div class=\"page\">\r\n        {%- if doc.title -%}\r\n        <h1 class=\"document-title\">{{ doc.title }}</h1>\r\n        {%- endif -%}\r\n        \r\n        <div class=\"content\">\r\n            {{ doc.content }}\r\n            \r\n            {%- if doc.signers -%}\r\n                {% for signer in doc.signers %}\r\n                    {% if signer.status == \"Approved\" %}\r\n                    <div class=\"signature-container\" style=\"position: absolute; left: {{ signer.x_position }}px; top: {{ signer.y_position }}px;\">\r\n                        {% if frappe.db.get_value(\"User\", signer.user, \"digital_signature\") %}\r\n                            <img src=\"{{ frappe.db.get_value('User', signer.user, 'digital_signature') }}\" \r\n                                alt=\"Digital Signature\"\r\n                                class=\"signature\">\r\n                            <!--<div class=\"signature-details\">-->\r\n                            <!--    <span class=\"name\">{{ signer.user }}</span>-->\r\n                            <!--    <span class=\"date\">{{ frappe.utils.formatdate(signer.signed_on, 'dd-MM-yyyy HH:mm:ss') }}</span>-->\r\n                            <!--</div>-->\r\n                        {% endif %}\r\n                    </div>\r\n                    {% endif %}\r\n                {% endfor %}\r\n            {%- endif -%}\r\n        </div>\r\n    </div>\r\n</div>\r\n\r\n<style>\r\n/* Reset and Base Styles */\r\n* {\r\n    margin: 0;\r\n    padding: 0;\r\n    box-sizing: border-box;\r\n}\r\n\r\n/* A4 Page Settings */\r\n@page {\r\n    size: A4;\r\n    margin: 0;\r\n}\r\n\r\n/* Document Container */\r\n.print-document {\r\n    background: white;\r\n    color: #333;\r\n    font-family: Arial, sans-serif;\r\n    line-height: 1.6;\r\n}\r\n\r\n/* Page Layout */\r\n.page {\r\n    width: 210mm;\r\n    min-height: 297mm;\r\n    margin: 0 auto;\r\n    padding: 25mm 25mm 20mm 25mm; /* Standard margins: top right bottom left */\r\n    position: relative;\r\n}\r\n\r\n/* Typography */\r\n.document-title {\r\n    font-size: 24px;\r\n    font-weight: bold;\r\n    margin-bottom: 30px;\r\n    color: #000;\r\n    page-break-after: avoid;\r\n}\r\n\r\n.content {\r\n    font-size: 12pt;\r\n    text-align: justify;\r\n    position: relative;\r\n}\r\n\r\n/* Signature Styles */\r\n.signature-container {\r\n    page-break-inside: avoid;\r\n    margin-top: 20px;\r\n    z-index: 100;\r\n}\r\n\r\n.signature {\r\n    max-height: 50px;\r\n    max-width: 200px;\r\n    display: block;\r\n    margin-bottom: 5px;\r\n}\r\n\r\n.signature-details {\r\n    font-size: 10pt;\r\n    line-height: 1.3;\r\n}\r\n\r\n.signature-details .name {\r\n    font-weight: bold;\r\n    display: block;\r\n}\r\n\r\n.signature-details .date {\r\n    color: #666;\r\n    font-size: 9pt;\r\n}\r\n\r\n/* Print-specific Styles */\r\n@media print {\r\n    html, body {\r\n        margin: 0;\r\n        padding: 0;\r\n        width: 210mm;\r\n        height: 297mm;\r\n    }\r\n    \r\n    .print-document {\r\n        width: 210mm;\r\n        margin: 0;\r\n        padding: 0;\r\n        -webkit-print-color-adjust: exact;\r\n        print-color-adjust: exact;\r\n    }\r\n    \r\n    .page {\r\n        box-shadow: none;\r\n        margin: 0;\r\n    }\r\n    \r\n    /* Ensure proper page breaks */\r\n    .page {\r\n        page-break-after: always;\r\n    }\r\n    \r\n    /* Prevent unwanted breaks */\r\n    h1, h2, h3, h4, h5, h6 {\r\n        page-break-after: avoid;\r\n    }\r\n    \r\n    img, table {\r\n        page-break-inside: avoid;\r\n    }\r\n}\r\n\r\n/* High-DPI Print Quality */\r\n@media print and (min-resolution: 300dpi) {\r\n    .signature {\r\n        image-rendering: high-quality;\r\n    }\r\n}\r\n</style>",
